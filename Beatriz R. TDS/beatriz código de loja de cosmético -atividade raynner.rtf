<body>\par
    <h1>\f2\u-10179?\u-9066?\f0 Cosmetics Rios\f2\u-10179?\u-9084?\f0 </h1>\par
    <button onclick="iniciarCompra()">Iniciar Compra</button>\par
    <div id="resultado"></div>\par
\par
    <script>\par
        let produtos = [\par
            \{ nome: "Perfume", preco: 150 \},\par
            \{ nome: "Batom", preco: 30 \},\par
            \{ nome: "Creme facial", preco: 80 \},\par
            \{ nome: "Shampoo", preco: 50 \},\par
            \{ nome: "Maquiagem completa", preco: 300 \}\par
        ];\par
\par
        window.onload = function () \{\par
            alert("Bem-vindo \'e0 nossa Loja de Cosm\'e9ticos! Aproveite as ofertas.");\par
            exibirProdutos();\par
        \};\par
\par
        function exibirProdutos() \{\par
            let lista = ("<b>Produtos dispon\'edveis:</b><br>");\par
            for (let i = 0; i < produtos.length; i++) \{\par
                lista += "- " + produtos[i].nome + " (R$ " + produtos[i].preco + ")<br>";\par
\par
            \}\par
            document.getElementById("resultado").innerHTML = lista;\par
        \}\par
\par
        function iniciarCompra() \{\par
            let totalCompra = 0;\par
            let resumo = "<br><b>Resumo da Compra:</b><br>";\par
\par
            while (true) \{\par
                let produtoEscolhido = prompt("Digite o nome do produto(ou 'fim' para encerrar):");\par
\par
                if (!produtoEscolhido) \{\par
                    break;\par
                \} else if (produtoEscolhido.toLowerCase() === "fim") \{\par
                    break;\par
                \}\par
\par
\par
                let quantidade = parseInt(prompt("Quantos " + produtoEscolhido + " voc\'ea deseja comprar?"));\par
\par
\par
                if (isNaN(quantidade) || quantidade <= 0) \{\par
                    alert("Quantidade inv\'e1lida. Tente novamente.");\par
                    continue;\par
                \}\par
\par
                let produto;\par
                for (let i = 0; i < produtos.length; i++) \{\par
                    if (produtos[i].nome.toLowerCase() === produtoEscolhido.toLowerCase()) \{\par
                        produto = produtos[i];\par
                        break; // Para ao encontrar o produto\par
                    \}\par
                \}\par
\par
                if (produto) \{\par
                    let subtotal = produto.preco * quantidade;\par
                    totalCompra += subtotal;\par
                    resumo += quantidade + " x " + produto.nome + " = R$ " + subtotal + "<br>";\par
                \} else \{\par
                    alert("Produto '" + produtoEscolhido + "' n\'e3o encontrado.");\par
\par
                \}\par
            \}\par
\par
            if (totalCompra === 0) \{\par
                alert("Nenhum produto foi comprado.");\par
                return;\par
            \}\par
\par
            let formaPagamento = prompt("Forma de pagamento (D\'e9bito ou Cr\'e9dito)?").toLowerCase();\par
            let formaTexto;\par
            if (formaPagamento === "cr\'e9dito" || formaPagamento === "d\'e9bito") \{\par
                formaTexto = formaPagamento;\par
            \} else \{\par
                formaTexto = "forma desconhecida";\par
            \}\par
\par
            resumo += "<br><b>Total da compra:</b> R$ " + totalCompra + "<br>";\par
            resumo += "<b>Forma de pagamento:</b> " + formaTexto + "<br>";\par
\par
\par
            if (formaTexto === "cr\'e9dito") \{\par
                let parcelar = confirm("Deseja parcelar a compra?");\par
                if (parcelar) \{\par
                    let parcelas = parseInt(prompt("Em quantas vezes deseja parcelar? (at\'e9 12x):"));\par
\par
                    if (!isNaN(parcelas) && parcelas > 1 && parcelas <= 12) \{\par
                        let valorParcela = totalCompra / parcelas;\par
                        resumo += "<b>Parcelado em:</b> " + parcelas + "x de R$ " + valorParcela + "<br>";\par
                    \} else \{\par
                        resumo += "<em>Parcelamento n\'e3o aplicado (entrada inv\'e1lida).</em><br>";\par
\par
                    \}\par
                \}\par
            \}\par
\par
            document.getElementById("resultado").innerHTML += resumo;\par
        \}\par
    </script>\par
